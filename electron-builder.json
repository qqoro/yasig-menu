{
  "appId": "com.yasig.menu.app",
  "productName": "야식메뉴판",
  "directories": {
    "output": "dist",
    "buildResources": "src/main/static"
  },
  "win": {
    "target": ["nsis", "portable"]
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "artifactName": "yasig-menu-setup-${version}.${ext}",
    "shortcutName": "야식메뉴판"
  },
  "portable": {
    "artifactName": "yasig-menu-portable-${version}.${ext}"
  },
  "linux": {
    "target": ["snap"]
  },
  "asar": true,
  "publish": {
    "provider": "github",
    "owner": "qqoro",
    "repo": "yasig-menu"
  },
  "files": [
    {
      "from": "build/main",
      "to": "main",
      "filter": ["**/*"]
    },
    {
      "from": "build/renderer",
      "to": "renderer",
      "filter": ["**/*"]
    },
    {
      "from": "src/main/static",
      "to": "static",
      "filter": ["**/*"]
    },
    "!build",
    "!dist",
    "!scripts"
  ]
}
