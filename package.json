{
  "name": "yasig-menu",
  "displayName": "야식메뉴판",
  "version": "2.3.1",
  "description": "야식 관리에 도움이 되는 가벼운 앱",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qqoro/yasig-menu.git"
  },
  "main": "main/main.js",
  "author": {
    "name": "qqoro"
  },
  "scripts": {
    "dev": "node scripts/dev-server.js",
    "build": "tsc --noEmit && node scripts/build.js && electron-builder --win --publish=never",
    "build:port": "tsc --noEmit && node scripts/build.js && electron-builder --win portable --publish=never",
    "build:win": "tsc --noEmit && node scripts/build.js && electron-builder --win --publish=never",
    "build:port:win": "tsc --noEmit && node scripts/build.js && electron-builder --win portable --publish=never",
    "prepare": "husky",
    "postinstall": "electron-builder install-app-deps",
    "lint": "oxlint",
    "format": "prettier src/ --write"
  },
  "type": "module",
  "devDependencies": {
    "@iconify-json/solar": "^1.2.2",
    "@iconify/vue": "^4.3.0",
    "@types/node": "^22.14.1",
    "@types/semver": "^7.7.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "chalk": "^5.4.1",
    "chokidar": "^3.6.0",
    "electron": "^32.1.2",
    "electron-builder": "^25.1.6",
    "husky": "^9.1.7",
    "oxlint": "^1.5.0",
    "prettier": "^3.6.2",
    "semver": "^7.7.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vite": "^6.3.0"
  },
  "dependencies": {
    "@internationalized/date": "^3.8.1",
    "@tailwindcss/vite": "^4.1.4",
    "@vueuse/core": "^13.1.0",
    "better-sqlite3": "^11.10.0",
    "chrome-launcher": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "electron-log": "^5.3.3",
    "electron-updater": "^6.6.2",
    "electron-window-state": "^5.0.3",
    "fast-glob": "^3.3.3",
    "knex": "^3.1.0",
    "lucide-vue-next": "^0.488.0",
    "node-html-parser": "^7.0.1",
    "pinia": "^3.0.2",
    "pretendard": "^1.3.9",
    "puppeteer-core": "^24.6.1",
    "reka-ui": "^2.2.0",
    "tailwind-merge": "^3.2.0",
    "tailwindcss": "^4.1.4",
    "tw-animate-css": "^1.2.5",
    "vue": "^3.5.13",
    "vue-router": "4",
    "vue-sonner": "^1.3.2"
  },
  "packageManager": "pnpm@10.10.0",
  "pnpm": {
    "ignoredBuiltDependencies": [
      "esbuild",
      "vue-demi"
    ],
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "electron",
      "puppeteer"
    ]
  }
}
